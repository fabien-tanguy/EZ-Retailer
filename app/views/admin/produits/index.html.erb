<ul data-role="listview" data-divider-theme="e" data-inset="true">
	<li>
		<%= link_to "Ajouter un produit ou service ", new_admin_produit_path %>
	</li>
</ul>	
<ul data-role="listview" data-divider-theme="e" data-inset="true">
	<li data-role="list-divider">
		Produits
	</li>
	<% @produits.each do |produit| %>
		<li>

			<% if produit.photo_active and !produit.photos.empty? %>
				<%= link_to "#{image_tag(produit.photos[0].image_url(:thumb_list), :alt => 'produit', :class => 'photo-featured')}&nbsp;&nbsp;<h1>#{produit.titre}</h1>".html_safe, admin_produit_path(produit), "data-ajax" => "false" %>
			<% else %>
				<%= link_to "<h1>#{produit.titre}</h1>".html_safe, admin_produit_path(produit), "data-ajax" => "false" %>
			<% end %>
		</li>
	<% end %>
</ul>

<ul data-role="listview" data-divider-theme="e" data-inset="true">
	<li data-role="list-divider">
		Services
	</li>
	<% @services.each do |serv| %>
		<li>

			<% if serv.photo_active and !serv.photos.empty? %>
				<%= link_to "#{image_tag(serv.photos[0].image_url(:thumb_list), :alt => 'service', :class => 'photo-featured')}&nbsp;&nbsp;<h1>#{serv.titre}</h1>".html_safe, admin_produit_path(serv) %>
			<% else %>
				<%= link_to "<h1>#{serv.titre}</h1>".html_safe, admin_produit_path(serv) %>
			<% end %>
		</li>
	<% end %>
</ul>
