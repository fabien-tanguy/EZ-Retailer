<h2>Se connecter</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {"data-ajax" => false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, label: "identifiant" %>
    <%= f.input :password, :required => false, label: "mot de passe" %>
    <%= f.input :remember_me, label: "se rappeler de moi ?", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Connexion" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
