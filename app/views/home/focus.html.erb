<div class="ui-grid-a">
	<div class="block-a">
		<h2 class="title-featured"><%= @focus.title.html_safe.capitalize %></h2>
		<% if @focus.photo_active %>
			<%= image_tag @focus.photos[0].image_url, :alt => "focus", :class => "photo-featured" %>
		<% end %>
		<br>
		<br>
		<%= @focus.description.capitalize.gsub(/\n/, '<br/>').html_safe %>
		<% if admin_signed_in? %>
			<ul data-role="listview" data-inset="true">
				<li data-theme="e"><%= link_to "<i class='icon-th-large'></i>&nbsp;Aller sur le site".html_safe, edit_admin_promo_path(@promo) %></li>	
			</ul>
		<% end %>		
	</div>
</div>