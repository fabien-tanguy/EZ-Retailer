<div class="ui-grid-a">
	<div class="block-a">
		<h2 class="title-featured"><%= @promo.title.html_safe.capitalize %></h2>
		<% if @promo.photo_active %>
			<%= image_tag @promo.photos[0].image_url, :alt => "promotion", :class => "photo-featured"  %>
		<% end %>
		<br>
		<br>
		<%= @promo.description.capitalize.gsub(/\n/, '<br/>').html_safe %> %>
		<% if admin_signed_in? %>
			<ul data-role="listview" data-inset="true">
				<li data-theme="e"><%= link_to "<i class='icon-th-large'></i>&nbsp;Aller sur le site".html_safe, edit_admin_promo_path(@promo) %></li>	
			</ul>
		<% end %>
	</div>
</div>		